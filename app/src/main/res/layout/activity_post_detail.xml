<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Post Details -->
        <TextView
            android:id="@+id/post_title_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/post_author_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/post_content_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>

        <!-- Replies List -->
        <ListView
            android:id="@+id/replies_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="true"
            android:layout_marginBottom="16dp"/>

        <!-- Reply Input -->
        <EditText
            android:id="@+id/reply_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Write a reply..."
            android:layout_marginBottom="8dp"/>

        <!-- Reply Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/anonymous_reply_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anonymous Reply Off"
                android:layout_marginEnd="16dp"/>

            <Button
                android:id="@+id/send_reply_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
